@using ssg.Library.External
@inject IParameterService _parameterService

@{
    string version = _parameterService.GetValue("version").ToText();

    string cssUrl = "/formmenu.min.css";
    string jsUrl = "/formmenu.js";

    if (version != null)
    {
        cssUrl = $"https://cdn.jsdelivr.net/npm/formmenu@{version}/dist/formmenu.min.css";
        jsUrl = $"https://cdn.jsdelivr.net/npm/formmenu@{version}/dist/formmenu.min.js";
    }
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- CSS for Bootstrap 5. Used to make the example pages look better. formmenu.min.css does not require Bootstrap 5. -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="/Bootstrap5Adjustments.css" rel="stylesheet">
    
    <!-- CSS for FormMenu -->
    <link rel="stylesheet" href="@cssUrl" crossorigin="anonymous">
</head>
<body>
    @RenderBody()

    <!-- JavaScript for FormMenu -->
    <script src="@jsUrl"></script>

    <!-- JavaScript for Bootstrap 5. Used to make the example pages look better. formmenu.min.js does not require Bootstrap 5, jQuery or Popper. -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script></body>
</html>
